<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#EBF3FD" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="#2980B9" />
        </shape>
    </item>

    <!-- Trạng thái khi disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#F8F9FA" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="#BDC3C7" />
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8FBFF" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="#3498DB" />
        </shape>
    </item>

</selector>