<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#CCE7FF"
                android:endColor="#E0F2FF"
                android:angle="90" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#0052CC" />
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8FBFF"
                android:endColor="#F0F8FF"
                android:angle="90" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#0068FF" />
        </shape>
    </item>

</selector>