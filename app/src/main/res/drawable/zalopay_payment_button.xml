<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0052CC"
                android:endColor="#003D99"
                android:angle="90" />
            <corners android:radius="28dp" />
            <stroke android:width="1dp" android:color="#003D99" />
        </shape>
    </item>

    <!-- Trạng thái khi disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0068FF"
                android:endColor="#0052CC"
                android:angle="90" />
            <corners android:radius="28dp" />
            <stroke android:width="1dp" android:color="#0056D6" />
        </shape>
    </item>

</selector>